{
  "name": "@wordify/api",
  "projectType": "application",
  "sourceRoot": "apps/api/src",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/api",
        "main": "apps/api/src/main.ts",
        "tsConfig": "apps/api/tsconfig.app.json"
      }
    },

    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "@wordify/api:build",
        "watch": true
      }
    },

    "serve:e2e": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "@wordify/api:build",
        "watch": false
      }
    }
  }
}
