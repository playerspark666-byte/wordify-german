{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",

    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "lib": ["ES2022"],
    "types": ["node"],

    "sourceMap": true,
    "declaration": false,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,

    "importHelpers": true,

    "baseUrl": ".",
    "paths": {
      "@wordify/api": ["apps/api/src/index.ts"],
      "@wordify/api/*": ["apps/api/src/*"]
    },

    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "tmp"]
}
